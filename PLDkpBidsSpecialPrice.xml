				<OnEscapePressed>
					PLDkpBidsSpecialPriceFrame_ItemIdEditESC();
				</OnEscapePressed>
				<OnEnterPressed>
					PLDkpBidsSpecialPriceFrame_ItemIdEditENTER();
				</OnEnterPressed>
				<OnEditFocusLost>
				PLDkpBidsSpecialPriceFrame_ItemIdEditFocusLost();
				</OnEditFocusLost>
			</Scripts>
		</EditBox>

		<Frame name="$parentItemInfo">
			<Size>
				<AbsDimension x="200" y="6" />
